generator client {
   provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Recipe {
  id            Int           @id @default(autoincrement())
  name          String
  image         String
  description   String
  category      String
  origin        String?
  ingredients   Ingredient[]
  instructions  Instruction[]
  cookTimer     String

  @@map("recipes")
}

model Ingredient {
  id                Int      @id @default(autoincrement())
  recipe            Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  recipeId          Int
  ingredientName    String
  ingredientPortion String

  @@map("ingredients")
}

model Instruction {
  id          Int      @id @default(autoincrement())
  recipe      Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  recipeId    Int
  instruction String

  @@map("instructions")
}
