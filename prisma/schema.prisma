generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id           Int           @id @default(autoincrement())
  name         String
  image        String
  description  String
  category     String
  origin       String?
  cookTimer    String
  ingredients  Ingredient[]
  instructions Instruction[]

  @@map("recipes")
}

model Ingredient {
  id                Int    @id @default(autoincrement())
  recipeId          Int
  ingredientName    String
  ingredientPortion String
  recipe            Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("ingredients")
}

model Instruction {
  id          Int    @id @default(autoincrement())
  recipeId    Int
  instruction String
  recipe      Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("instructions")
}
