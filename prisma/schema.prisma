generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id             String           @id @default(uuid())
  name           String
  urlImage       String
  description    String
  category       String
  cookTimer      String
  ingredients    String[]
  instructions   String[]
  recipesRelated RecipesRelated[]

  @@map("recipes")
}

model RecipesRelated {
  id        String @id @default(uuid())
  recipeId  String
  recipe    Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  name      String
  urlImage  String
  cookTimer String
}
